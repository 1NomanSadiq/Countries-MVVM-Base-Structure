<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="GscTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="fontFamily">@font/core_sans_d</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily">@font/core_sans_d</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="GcsButton" parent="Widget.Material3.Button">
        <item name="android:paddingVertical">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
    </style>

    <style name="GcsButtonLightToDarkRound" parent="GcsButton">
        <item name="android:background">@drawable/ripple_light_to_dark_round</item>
    </style>

    <style name="GcsButtonDarkToLightRound" parent="GcsButton">
        <item name="android:background">@drawable/ripple_dark_to_light_round</item>
    </style>

    <style name="GcsButtonLightToDarkRect" parent="GcsButton">
        <item name="android:background">@drawable/ripple_light_to_dark_rect</item>
    </style>

    <style name="GcsButtonDarkToLightRect" parent="GcsButton">
        <item name="android:background">@drawable/ripple_dark_to_light_rect</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView</item>
    </style>

    <style name="TextAppearance.BottomNavigationView" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/Widget.Material3.Button</item>
    </style>

    <style name="Widget.Material3.Button" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.MaterialComponents.Transparent.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialogStyle" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_out_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>