<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="NomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buttonPressed</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#919EED</item>
        <item name="colorSecondaryVariant">#919EED</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily">@font/roboto</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="NomButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/ripple</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="NomButtonIcon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:background">@drawable/ripple</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.MaterialComponents.Transparent.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialogStyle" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_out_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>